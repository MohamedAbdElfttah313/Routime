<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/main_background_gradiant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.UiControllers.NavigatorMainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/MainScreenFragmentContainerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="3"
        android:elevation="5dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/rounded_background_16dp"
        android:backgroundTint="@color/white_20"
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/TodayIconImageView"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_calendar"
            android:tint="@color/white"
            android:layout_weight="1"/>



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/SearchIconImageView"

            android:layout_width="0dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_search"
            android:layout_gravity="center"
            android:tint="@color/gray_300"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ChartIconImageView"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_gravity="center"

            android:src="@drawable/ic_bar_chart"
            android:tint="@color/gray_300"
            android:layout_weight="1"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>