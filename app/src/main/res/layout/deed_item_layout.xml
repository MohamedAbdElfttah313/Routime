<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/rounded_background_16dp"
    android:backgroundTint="#26000000"
    android:paddingVertical="10dp"
    android:paddingHorizontal="14dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/DeedItemIconImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/DeedItemTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginStart="40dp"
        android:paddingVertical="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="None"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/DeedItemStartTimeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/DeedItemProgressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress : 60%"
        android:textSize="10sp"
        android:layout_marginTop="6dp"
        android:background="@drawable/rounded_background_16dp"
        android:backgroundTint="@color/green_50"
        android:paddingVertical="2dp"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        app:layout_constraintStart_toStartOf="@+id/DeedItemTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/DeedItemTitleTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/DeedItemHasAttachmentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_16dp"
        android:backgroundTint="@color/pink_50"
        android:drawableStart="@drawable/ic_small_attachment"
        android:drawablePadding="4dp"
        android:layout_marginTop="4dp"
        android:drawableTint="@color/black"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:text="Has Attachment"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/DeedItemProgressTextView"
        app:layout_constraintTop_toBottomOf="@+id/DeedItemProgressTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/DeedItemProgressDoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_16dp"
        android:backgroundTint="@color/yellow_100"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:text="Done"
        android:layout_marginStart="7dp"

        android:visibility="gone"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/DeedItemProgressTextView"
        app:layout_constraintTop_toTopOf="@+id/DeedItemProgressTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/DeedItemProgressNotDoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_16dp"
        android:backgroundTint="@color/blue_100"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:text="In Progress"
        android:textSize="10sp"
        android:layout_marginStart="7dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/DeedItemProgressTextView"
        app:layout_constraintTop_toTopOf="@+id/DeedItemProgressTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/DeedItemStartTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="9:00 AM"
        android:textColor="#E1D6E7"
        app:layout_constraintBottom_toBottomOf="@+id/DeedItemTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>