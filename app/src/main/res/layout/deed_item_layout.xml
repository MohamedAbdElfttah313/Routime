<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/rounded_background_16dp"
    android:backgroundTint="#26000000"
    android:padding="14dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/DeedItemIconImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/DeedItemTitleTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="18dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="None"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/DeedItemIconImageView"
        app:layout_constraintEnd_toStartOf="@+id/DeedItemStartTimeTextView"
        app:layout_constraintStart_toEndOf="@+id/DeedItemIconImageView"
        app:layout_constraintTop_toTopOf="@+id/DeedItemIconImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/DeedItemStartTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="9:00 AM"
        android:textColor="#E1D6E7"
        app:layout_constraintBottom_toBottomOf="@+id/DeedItemTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>